{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true, // ✅ Habilita el soporte para decoradores
    "emitDecoratorMetadata": true, // ✅ Permite que TypeORM use metadatos en los decoradores
    "strictPropertyInitialization": false, // ✅ Evita errores con inicialización de propiedades
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "app/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
